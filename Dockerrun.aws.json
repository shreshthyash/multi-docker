{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "shreshthyash/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "shreshthyash/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "shreshthyash/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "shreshthyash/multi-nginx",
            "essential": true,
            "portMappings": [
               { 
                   "hostPort": 80,
                   "containerPort": 80
               }
            ],
            "links": ["client", "server"]
        }

    ]

}